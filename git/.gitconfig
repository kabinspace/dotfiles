[commit]
  gpgSign = true

[tag]
  gpgSign = true

# Delta
[core]
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  line-numbers = true
  syntax-theme = TwoDark
  line-numbers-left-style = "#abb2bf"
  line-numbers-right-style = "#abb2bf"
  hunk-header-decoration-style = white box
  line-numbers-minus-style = "#fc6544"
  line-numbers-plus-style = "#72cc32"
  line-numbers-zero-style = "#abb2bf"
  file-style = bold yellow ul
  whitespace-error-style = reverse white
		
[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
